---
const products = [
  {
    name: 'Custom Complete Skateboards',
    description: 'Build your perfect ride with our custom skateboard builder.',
    image: 'https://images.unsplash.com/photo-1547447134-cd3f5c716030?auto=format&fit=crop&q=80&w=764',
    price: 'From $129.99'
  },
  {
    name: 'Pro Decks',
    description: 'Premium skateboard decks from top brands.',
    image: 'https://images.unsplash.com/photo-1520045892732-304bc3ac5d8e?auto=format&fit=crop&q=80&w=764',
    price: 'From $49.99'
  },
  {
    name: 'Longboards',
    description: 'Cruise in style with our selection of longboards.',
    image: 'https://images.unsplash.com/photo-1572776685600-aca8c3456337?auto=format&fit=crop&q=80&w=764',
    price: 'From $159.99'
  },
  {
    name: 'Accessories',
    description: 'Everything you need to customize your ride.',
    image: 'https://images.unsplash.com/photo-1531565637446-32307b194362?auto=format&fit=crop&q=80&w=764',
    price: 'From $9.99'
  }
];
---
<section id="products" class="py-24 bg-skate-black">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <h2 class="font-marker text-2xl md:text-3xl mb-4 text-center">Our Products</h2>
      <p class="text-gray-400 text-center mb-12 text-sm md:text-base">Discover your perfect ride from our curated collection</p>
      
      <div class="grid md:grid-cols-2 gap-8">
        {products.map(product => (
          <div class="group relative overflow-hidden rounded-2xl border border-white/10 transition-transform hover:-translate-y-1">
            <div class="absolute inset-0 bg-gradient-to-t from-skate-black to-transparent z-10"></div>
            <img 
              src={product.image} 
              alt={product.name}
              class="w-full h-[300px] object-cover transition-transform group-hover:scale-105"
            />
            <div class="absolute bottom-0 left-0 right-0 p-6 z-20">
              <h3 class="text-lg md:text-xl font-bold mb-2">{product.name}</h3>
              <p class="text-gray-400 mb-4 text-xs md:text-sm">{product.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-skate-red font-bold text-sm md:text-base">{product.price}</span>
                <a href="#contact" class="bg-skate-red px-4 py-2 rounded font-medium text-xs md:text-sm hover:bg-red-600 transition duration-300">
                  Inquire Now
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>